{% block offer %}
	<section class="offer">
		<div class="container container--flex">
			<div class="offer__content">
				<div class="offer__slider">
					<div class="offer__slider-arrow">
						{% include '/assets/svg/arrow-left.svg' %}
					</div>
					<div class="offer__slider-text">
						<div class="offer__slider-text-1">{% include '/assets/svg/2=3.svg' %}</div>
						<div class="offer__slider-text-2">{% include '/assets/svg/all-books.svg' %}</div>
					</div>
					<div class="offer__slider-arrow">
						{% include '/assets/svg/arrow-right.svg' %}
					</div>
					<div class="offer__slider-dots">
						<div class="offer__slider-dots-wrap">
							{% include '/assets/svg/slider-active.svg' %}
							{% include '/assets/svg/slider-inactive.svg' %}
							{% include '/assets/svg/slider-inactive.svg' %}
							{% include '/assets/svg/slider-inactive.svg' %}
						</div>
					</div>
				</div>
				<div class="offer__promotion">
					<div class="offer__promotion-text">
						<p> Бесплатно доставим ваш заказ при покупке от 2000 ₽ </p> 
						<div class="offer__promotion-line">{% include '/assets/svg/orange-line.svg' %}</div>
					</div>
					<div class="offer__promotion-svg">
						{% include '/assets/svg/free-delivery.svg' %}
					</div>
				</div>

				<div class="offer__promotion offer__discount">
					<div class="offer__promotion-text offer__promotion-text--blue">
						<p>Скидка <br> при регистрации <br> до 15%</p> 
						<div class="offer__promotion-line offer__promotion-line--cyan">{% include '/assets/svg/cyan-line.svg' %}</div>
					</div>
					<div class="offer__promotion-svg">
						{% include '/assets/svg/discount-reg.svg' %}
					</div>
				</div>
			</div>
			<div class="offer__aside">
				<div class="offer__aside-daybook">
					<p>Книга дня</p>
					<div class="offer_aside-daybook-time">08:56:31</div>
				</div>
				<img src="img/daybook.png" alt="book of the day" class="">
				<div class="offer__aside-desc">
					<p class="offer__aside-desc-item">Корпоративное право</p>
					<p class="offer__aside-desc-item">Инвестирование: способы, риски, субъекты : монография</p>
					<p class="offer__aside-desc-item">Майфат А.В.</p>
					<p class="offer__aside-desc-item">4 450 ₽</p>
				</div>
				<div class="offer__aside-actions">
					<button class="g-button-cart">
						{% include '/assets/svg/orange-cart.svg' %}
						В корзину
					</button>
					<button class="g-button-tabs">
						{% include '/assets/svg/tabs.svg' %}
					</button>
				</div>
			</div>
		</div>
	</section>
{% endblock %}